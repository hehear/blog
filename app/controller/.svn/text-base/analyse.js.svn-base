const express = require('express');
const logger = require('../../common/log4js');
const router = express.Router();


//对应的模块名，大小写均可(windows下)
var pool = require('../../common/mysqlPool');

router.use(function (req, res, next) {
    // console.log('Time:',Date.now());
    // logger.error("555555555555555");
    // logger.info("6666666666666");
    next();
});

router.get('/', function (req, res) {

    res.render('analyse/index');

});

router.post('/menuList', function (req, res) {

    pool.query('select  * from  menu   order by pid asc', function (err, rows) {
        if (err) {
            throw err;
        }
        if (rows) {
            res.jsonp(rows);
        }

    });
});

router.get('/add', function (req, res) {
    res.render('info/add');
});

router.post('/getRelation', function (req, res) {
    var menuId = req.body.menuId;
    pool.query('SELECT DISTINCT menu_id as menuId FROM menu_table WHERE table_cd IN(  SELECT table_cd FROM menu_table WHERE menu_id=?)', [parseInt(menuId)], function (err, rows, fields) {
        if (err) throw err;
        res.json(rows);

    });

});
router.post('/', function (req, res) {

    var id = req.body.id;
    var title = req.body.title;
    var tp = req.body.tp;
    var content = req.body.editorValue;
    var des = req.body.des;
    var rmrk = req.body.rmrk;

    if (id) {
        pool.query('update info set title=?,tp=?,content=?,des=?,rmrk=? where id=? ',
            [title, tp, content, des, rmrk, id], function (err) {
                if (err) {
                    throw err;
                }
                res.send('success');
            });
    } else {
        pool.query('insert into info( title,tp,content,des,rmrk) values(?,?,?,?,?)', [title, tp, content, des, rmrk], function (err) {
            if (err) {
                throw err;
            }
            res.send('success');
        });
    }


});

router.post('/detail', function (req, res) {
    var menuId = req.body.menuId;

    pool.query('select menu_id as menuId,m.`name` as menuNm,GROUP_CONCAT(table_cd) as tableCds from menu_table r right join menu m on r.menu_id=m.id  where m.id=?', [parseInt(menuId)], function (err, rows, fields) {
        if (err) throw err;
        res.json(rows[0]);

    });
});

router.post('/save', function (req, res) {
    var menuId = req.body.menuId;
    var tableCds = req.body.tableCds;
    tableCds = tableCds.split('\n');

    //根据菜单id将所有已存记录删除
    pool.query('delete  from menu_table where menu_id=? ', [parseInt(menuId)], function (err, rows, fields) {
        if (err) {
            throw err;
        }
        //res.json(rows);
        for (var i = 0; i < tableCds.length; i++) {
            if (tableCds[i] && tableCds[i].trim()) {
                pool.query('insert into menu_table(menu_id,table_cd) values(?,?) ', [menuId, tableCds[i].trim()], function (err, rows, fields) {
                    if (err) {
                        throw err;
                    }

                });

            }
        }
        res.json({});

    });

});


//必须
module.exports = router;