<body class="signin">


<section id='app'>
  
    <div class="signinpanel">

        <div class="row ">

            <div class="col-xs-12 ">

                <div class="panel panel-dark panel-alt widget-time">
                    <div class="panel-heading text-center">
                        <i class="glyphicon glyphicon-eye-close"></i>
                    </div>

                    <div class="panel-body text-center " style="border-bottom: #b3b3b3;border-bottom-style: dashed">
                        <h3>闭眼，和周公去约会吧！</h3>
                    </div>

                    <div class="panel-body text-center">
                        <h3 class="today">${currtDate}</h3>
                    </div><!-- panel-body -->
                </div><!-- panel -->
            </div>

        </div><!-- row -->

        <div class="row">

            <div class="col-xs-6 ">
                <button type="button" class="btn btn-info btn-lg" style="width: 100%"  v-on:click="sleepstill()"> 马上睡 </button>
            </div>
            <div class="col-xs-6 ">
                <button type="button" class="btn btn-warning btn-lg" style="width: 100%"  v-on:click="towork()"> 还能敲代码 </button>
            </div>
            
        </div><!-- row -->
        
        <!--<div class="signup-footer">-->
